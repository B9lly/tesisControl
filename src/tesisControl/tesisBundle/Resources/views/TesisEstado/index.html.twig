{% extends 'tesisControltesisBundle::Template.html.twig' %}
{% block javascripts %}
    {{parent()}}
    <script>
    $(document).ready(function() {
    $('#tabla').DataTable();
    });
    
    </script>
{% endblock %}


{% block body -%}
    <h1>TesisEstado list</h1>
    <table id="tabla" class="display"> 
        
            <thead>
            <tr>
                <th>Id</th>
                <th>Nombres</th>
                <th>Descripciones</th>
                <th>Fechadefensa</th>
                <th>Fechainicio</th>
                <th>Fechafin</th>
                <th>Status</th>
                <th>Observacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tesisestado_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreEs }}</td>
                <td>{{ entity.descripcionEs }}</td>
                <td>{% if entity.fechaDefensa %}{{ entity.fechaDefensa|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaInicio %}{{ entity.fechaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaFin %}{{ entity.fechaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.observacion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tesisestado_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tesisestado_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tesisestado_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
