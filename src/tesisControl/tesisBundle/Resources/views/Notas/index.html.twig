{% extends 'tesisControltesisBundle::Template.html.twig' %}
{% block javascripts %}
    {{parent()}}
    <script>
    $(document).ready(function() {
    $('#tabla').DataTable();
    });
    
    </script>
 {% endblock %}

{% block body -%}
    <h1>Notas list</h1>

    <table id="tabla" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nota</th>
                <th>Ponderacion</th>
                <th>Observacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('notas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nota }}</td>
                <td>{{ entity.ponderacion }}</td>
                <td>{{ entity.observacion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('notas_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('notas_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('notas_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
