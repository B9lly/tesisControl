{% extends 'tesisControltesisBundle::Template.html.twig' %}
{% block javascripts %}
    {{parent()}}
    <script>
    $(document).ready(function() {
    $('#tabla').DataTable();
    });
    
    </script>
{% endblock %}
{% block body -%}
    <h1>Asesoria list</h1>

    <table id="tabla" class="display">
        <thead>
            <tr>
                <th>IdGrupo</th>
                <th>Fecha</th>
                <th>Horainicio</th>
                <th>Horafin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('asesoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fecha%}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.horaInicio | date("H:i:s") }}</td>
                <td>{{ entity.horaFin | date("H:i:s")  }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('asesoria_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('asesoria_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('asesoria_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
