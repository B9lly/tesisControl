{% extends 'tesisControltesisBundle::Template.html.twig' %}
{% block javascripts %}
    {{parent()}}
    <script>
    $(document).ready(function() {
    $('#tabla').DataTable();
    });
    
    </script>
 {% endblock %}
{% block body -%}
    <h1>Etapa list</h1>
    <table id="tabla" class="display">
            <thead>
            <tr>
                <th>Id</th>
                <th>Porcentaje</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('etapa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.porcentaje }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('etapa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('etapa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('etapa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
